  gem "sass-rails", "~> 3.2.6"
  gem "bootstrap-sass", "~> 2.3.0.1"
  gem 'coffee-rails', '3.2.2'
  gem "uglifier", "~> 1.3.0"
end

gem 'jquery-rails', '2.0.2'
