<% provide(:title, 'Registro') %>
<div id="reg_form" class="bg_form">
  <h1>Registrate</h1>

  <div class="row">
    <div class="span6">
      <%= form_for(@user) do |f| %>
        <%= render 'error_messages' %>

        <%= f.label :name, "Nombre", :class => "label_form" %>
        <%= f.text_field :name, :class => "text_field_form", :required => true%>

        <%= f.label :email, :class => "label_form" %>
        <%= f.text_field :email, :class => "text_field_form", :required => true %>

        <%= f.label :password, :class => "label_form" %>
        <%= f.password_field :password, :class => "text_field_form", :required => true %>

        <%= f.label :password_confirmation, "Confirmar password", :class => "label_form" %>
        <%= f.password_field :password_confirmation, :class => "text_field_form", :required => true %>

        <%= f.submit "Crear mi cuenta", class: "btn btn-primary btn_form" %>
      <% end %>
    </div>
  </div>
</div>